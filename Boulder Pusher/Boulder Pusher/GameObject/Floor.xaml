<UserControl
    x:Class="Boulder_Pusher.GameObject.Floor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Boulder_Pusher.GameObject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="550"
    d:DesignWidth="550">

    <Grid>
        <Rectangle x:Name="floor"
                   Width="550"
                   Height="550">
            <Rectangle.Fill>
                <ImageBrush 
                    ImageSource="\Assets\Sprites\EntireFloor2.png"
                    Stretch="None"
                    AlignmentX="Left"
                    AlignmentY="Top"
                    >
                </ImageBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
